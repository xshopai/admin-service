{
  "name": "admin-service",
  "version": "1.0.0",
  "description": "Admin microservice for xShop.ai platform.",
  "main": "src/server.js",
  "type": "module",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "dapr run --app-id admin-service --app-port 1003 --dapr-http-port 3503 --dapr-grpc-port 50003 --log-level warn --config ./.dapr/config.yaml --resources-path ./.dapr/components -- node src/server.js",
    "dev": "dapr run --app-id admin-service --app-port 1003 --dapr-http-port 3503 --dapr-grpc-port 50003 --log-level warn --config ./.dapr/config.yaml --resources-path ./.dapr/components -- nodemon src/server.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration --runInBand",
    "test:e2e": "jest tests/e2e --runInBand --testTimeout=30000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aioutlet/admin-service.git"
  },
  "keywords": [
    "aioutlet",
    "microservice",
    "node",
    "express",
    "mongo"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aioutlet/admin-service/issues"
  },
  "homepage": "https://github.com/aioutlet/admin-service#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "babel-jest": "^30.0.2",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^8.0.0",
    "jest": "^30.0.2",
    "nodemon": "^3.1.10"
  },
  "dependencies": {
    "@dapr/dapr": "^3.5.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  }
}
