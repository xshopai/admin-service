# Admin Service - Environment Configuration Template
# Copy this file to .env and update the values for your environment.
#
# For local development without Dapr: cp .env.local .env
# For local development with Dapr:    cp .env.dapr .env

# =============================================================================
# Service Configuration
# =============================================================================
NODE_ENV=development
PORT=1003
NAME=admin-service
VERSION=1.0.0

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_TO_CONSOLE=true
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/admin-service.log

# =============================================================================
# JWT Configuration
# =============================================================================
# Note: When using Dapr, JWT_SECRET is retrieved from the Dapr secret store
JWT_SECRET=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
JWT_ISSUER=auth-service
JWT_AUDIENCE=xshopai-platform

# =============================================================================
# Dapr Configuration (optional - only needed when running with Dapr sidecar)
# =============================================================================
# DAPR_HOST=localhost
# DAPR_HTTP_PORT=3503
# DAPR_GRPC_PORT=50003
# DAPR_APP_ID=admin-service
# DAPR_PUBSUB_NAME=event-bus

# =============================================================================
# Downstream Service URLs
# =============================================================================
# Direct connection URLs (used when not using Dapr service invocation)
USER_SERVICE_URL=http://localhost:8002/api
ORDER_SERVICE_URL=http://localhost:8006/api
PRODUCT_SERVICE_URL=http://localhost:8001/api
PAYMENT_SERVICE_URL=http://localhost:8009/api
AUDIT_SERVICE_URL=http://localhost:8010/api
NOTIFICATION_SERVICE_URL=http://localhost:8011/api

# =============================================================================
# Service Tokens (for service-to-service authentication)
# =============================================================================
USER_SERVICE_TOKEN=your-user-service-token
ORDER_SERVICE_TOKEN=your-order-service-token
AUTH_SERVICE_TOKEN=your-auth-service-token
WEB_BFF_TOKEN=your-web-bff-token

# =============================================================================
# Admin Specific Settings
# =============================================================================
ADMIN_SESSION_TIMEOUT=1800000
ADMIN_MAX_LOGIN_ATTEMPTS=5
ADMIN_LOCKOUT_DURATION=900000
