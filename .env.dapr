# Admin Service - Dapr Development Environment
# Copy this to .env for local development with Dapr sidecar

NODE_ENV=development
PORT=1003
NAME=admin-service
VERSION=1.0.0

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_TO_CONSOLE=true
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/admin-service.log

# Dapr Configuration
DAPR_HOST=localhost
DAPR_HTTP_PORT=3503
DAPR_GRPC_PORT=50003
DAPR_APP_ID=admin-service
DAPR_PUBSUB_NAME=event-bus

# JWT Configuration (algorithm/issuer/audience - secret from Dapr secret store)
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
JWT_ISSUER=auth-service
JWT_AUDIENCE=xshopai-platform

# Downstream Service URLs (via Dapr service invocation or direct)
USER_SERVICE_URL=http://localhost:8002/api
ORDER_SERVICE_URL=http://localhost:8006/api
PRODUCT_SERVICE_URL=http://localhost:8001/api
PAYMENT_SERVICE_URL=http://localhost:8009/api
AUDIT_SERVICE_URL=http://localhost:8010/api
NOTIFICATION_SERVICE_URL=http://localhost:8011/api

# Service Tokens (for service-to-service communication)
USER_SERVICE_TOKEN=svc-user-service-4ff5876fc86cc45a18d88e5d
ORDER_SERVICE_TOKEN=svc-order-service-4ff5876fc86cc45a18d88e5d
AUTH_SERVICE_TOKEN=svc-auth-service-4ff5876fc86cc45a18d88e5d
WEB_BFF_TOKEN=svc-web-bff-4ff5876fc86cc45a18d88e5d

# Admin Specific Settings
ADMIN_SESSION_TIMEOUT=1800000
ADMIN_MAX_LOGIN_ATTEMPTS=5
ADMIN_LOCKOUT_DURATION=900000
